{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "React": "writable"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "plugins": ["react", "react-hooks", "@typescript-eslint", "jsx-a11y", "import", "typescript-custom-sort-keys"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jsx-a11y/recommended",
    "next",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "react/prop-types": "off", // for Next.js
    "react/react-in-jsx-scope": "off", // for TypeScript
    "@typescript-eslint/consistent-type-definitions": ["warn", "interface"],
    "react/jsx-sort-props": "error",
    "react-hooks/exhaustive-deps": "warn",
    "typescript-custom-sort-keys/interface": [
      "warn",
      "asc",
      {
        "caseSensitive": true,
        "displayFirst": ["id"],
        "showFunctionsAtEnd": true
      }
    ],
    "@typescript-eslint/no-unused-vars": ["error", { "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }]
  },
  "overrides": [
    {
      // TypeScript 用に設定を上書く
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": "src/**/*",
      "rules": {
        "no-restricted-imports": ["warn", { "patterns": ["./", "../"] }]
      }
    },
    {
      "files": "src/**/*",
      "excludedFiles": ["src/pages/_app.tsx", "src/presentation/components/common/**/*"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": ["@chakra-ui/*"]
          }
        ]
      }
    },
    {
      // import を sort するため、AutoFix をかける範囲で設定を上書く
      "files": ["src/**/*.{js,jsx,ts,tsx}"],
      "rules": {
        "import/order": [
          "error",
          {
            "groups": ["builtin", "external", "parent", "sibling", "index", "object", "type"],
            "pathGroups": [
              {
                "pattern": "@alias/**",
                "group": "parent",
                "position": "before"
              }
            ],
            "alphabetize": {
              "order": "asc"
            },
            "newlines-between": "always"
          }
        ]
      }
    }
  ]
}
